{
  "name": "clearline7-monorepo",
  "type": "module",
  "version": "0.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "dev:landing": "pnpm --filter @clearline7/landing dev",
    "dev:guide": "pnpm --filter @clearline7/style-guide dev",
    "dev:preview": "pnpm --filter @clearline7/preview dev",
    "dev:workspace": "pnpm --filter @clearline7/workspace dev",
    "dev:all": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "prepare": "husky",
    "asset:save": "bun scripts/assetTool.ts save",
    "asset:update": "bun scripts/assetTool.ts update",
    "sync:colors": "bun scripts/syncColorsToPrompts.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.23.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.3.3",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "turbo": "^2.6.1",
    "vitest": "^4.0.10"
  },
  "dependencies": {
    "react": "19.2.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "@eslint/js": "^9.36.0",
    "react-dom": "19.2.0",
    "@google/genai": "^1.31.0",
    "@google/generative-ai": "^0.24.1",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.45.0",
    "dotenv": "^17.2.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
