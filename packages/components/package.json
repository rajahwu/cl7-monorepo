{
  "name": "@clearline7/components",
  "version": "0.0.2",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean && pnpm run copy-assets",
    "copy-assets": "mkdir -p dist/StandardDocTemplate && cp src/StandardDocTemplate/style.css dist/StandardDocTemplate/style.css",
    "dev": "tsup src/index.ts --format cjs,esm --watch --dts",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clearline7/set-definitions": "^0.0.4",
    "@clearline7/theme": "workspace:*",
    "react": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "@types/react": "^19.2.5",
    "typescript": "^5.9.3"
  }
}
